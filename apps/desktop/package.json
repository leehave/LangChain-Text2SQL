{
  "name": "@chatbot/desktop",
  "version": "1.0.0",
  "description": "Electron desktop app for chatbot",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "package": "electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["electron", "desktop"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.chatbot.app",
    "productName": "LangChain Chatbot",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "../web/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
